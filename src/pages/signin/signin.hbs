<div class="container login signin">
  <form class="login__form">
    <div class="login__group">
      <h1 class="title">Регистрация</h1>
      {{> Input typeInput="text" title="Почта" }}
      {{> Input typeInput="text" title="Логин" }}
      {{> Input typeInput="text" title="Имя" }}
      {{> Input typeInput="text" title="Фамилия" }}
      {{> Input typeInput="text" title="Телефон" }}
      {{> Input error="error" typeInput="password" title="Пароль" }}
      {{> Input error="error" errorText="Пароли не совпадают" typeInput="password" title="Пароль (ещё раз)" }}
    </div>
    <div class="login__group">
      {{> Button title="Авторизоваться" type="primary" }}
      {{> Button title="Нет аккаунта?" type="text"}}
    </div>
  </form>
</div>